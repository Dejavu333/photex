<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PHOTEX.ChoosePage">


    <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

        <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Stylized photo icon."
                HeightRequest="200"
                HorizontalOptions="Center" />

        <Label 
                Text="PHOTEX"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        <Label 
                Text="Choose a photo, we extract the text from it!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="This is a description of the app."
                FontSize="18"
                HorizontalOptions="Center" />

        <Button 
                x:Name="CounterBtn"
                Text="Choose"
                SemanticProperties.Hint="Let's you choose a photo and extracts text from it."
                Clicked="chooseBtnOnClick"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
