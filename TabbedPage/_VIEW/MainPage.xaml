<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PHOTEX.MainPage">

      
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="camera.svg"
                SemanticProperties.Description="Stylized photo icon."
                HeightRequest="200"
                HorizontalOptions="Center" />
                
            <Label 
                Text="PHOTEX"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            
            <Label 
                Text="Take a photo, we extract the text from it!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="This is a description of the app."
                FontSize="18"
                HorizontalOptions="Center" />

            <Button 
                x:Name="CounterBtn"
                Text="Shoot"
                SemanticProperties.Hint="Takes a photo and extracts text from it."
                Clicked="photoToText"
                HorizontalOptions="Center" />

        </VerticalStackLayout>

</ContentPage>
